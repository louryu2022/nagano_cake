<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h3>会員情報編集</h3>
      <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div class="field">
          <label class="name">氏名　　　　　　　</label>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
          <%= f.text_field :first_name, placeholder:"道子" %>
        </div>

        <div class="field">
          <label class="kana">フリガナ　　　　　</label>
          <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
          <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
        </div>

        <div class="field">
          <label class="postal_code">郵便番号　　　　　</label>
          <%= f.text_field :postal_code, placeholder:"0000000" %>
        </div>

        <div class="field">
          <label class="address">住所　　　　　　　</label>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="field">
          <label class="telephone_number">電話番号　　　　　</label>
          <%= f.text_field :telephone_number, placeholder:"0000000000" %>
        </div>

        <div class="field">
          <label class="email">メールアドレス　　</label>
          <%= f.email_field :email, placeholder:"sample@example.com" %>
        </div>

        <div class="actions">
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>

      <% end %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>