<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <%= form_with model: @order, url: orders_path do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
      <%= f.hidden_field :total_payment, :value => @total + @shipping_cost %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <table border="2" class='col-md-8'>
        <thead>
          <tr>
            <th bgcolor="#F2F2F2">商品名</th>
            <th bgcolor="#F2F2F2">単価(税込)</th>
            <th bgcolor="#F2F2F2">数量</th>
            <th bgcolor="#F2F2F2">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size: "50x50" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount%></td>
            <td><%= cart_item.item.with_tax_price*cart_item.amount %></td>
            <% @total = @total + cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table border="2" class='col-md-2'>
          <tr>
          <td bgcolor="#F2F2F2">送料</td>
          <td><%= @shipping_cost %></td>
          </tr>
          <tr>
          <td bgcolor="#F2F2F2">商品合計</td>
          <td><%= @total %></td>
          </tr>
          <tr>
          <td bgcolor="#F2F2F2">請求金額</td>
          <td><%= @total + @shipping_cost %></td>
          </tr>
      </table>
        <h4>支払方法</h4>
        <p><%= @order.payment_method_i18n %></p>
        <h4>お届け先<h4>
        <p><%= @order.postal_code %><%= @order.address %><%= @order.name %></p>
        <%= f.submit '注文を確定する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>