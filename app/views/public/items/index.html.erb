<div class="container">
  <div class="row">
    <div class='col-md-2'>
      <%= render 'admin/genres/search' %>
    </div>
    <div class='col-md-10'>
      <h1>商品一覧<h4>(全8件)</h4></h1>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, size: "200x200" %>
        <% end %>
        <%= item.name %>
        <p>￥<%= item.price.to_s(:delimited) %></p>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>
