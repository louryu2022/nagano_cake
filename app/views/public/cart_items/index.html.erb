<div class="container">
  <div class="row">
    <div class='col-md-6'>
<h2>ショッピングカート</h2>
</div>
<div class='col-md-6'>
  <div div class="text-right">
<%= link_to 'カートを空にする',cart_items_destroy_all_path, method: :delete, class: "btn btn-sm btn-danger"%>
  </div>
</div>
<table border="2" class='col-md-12'>
  <thead>
    <tr>
      <th bgcolor="#F2F2F2">商品名</th>
      <th bgcolor="#F2F2F2">単価(税込)</th>
      <th bgcolor="#F2F2F2">数量</th>
      <th bgcolor="#F2F2F2">小計</th>
      <th bgcolor="#F2F2F2"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.image, size: "50x50" %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit '変更', class: "btn btn-success" %>
        <% end %>
      </td>
      <td><%= cart_item.item.with_tax_price*cart_item.amount %></td>
      <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger"%></td>
      <% @total = @total + cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
  <div class="row">
  <div class='col-md-8'>
    <%= link_to '買い物を続ける',root_path, class: "btn btn-sm btn-danger"%>
  </div>
  <div class='col-md-4'>
  <table border="2" >
  <tbody>
    <tr>
    <td bgcolor="#F2F2F2">合計金額</td>
    <td><%= @total.to_s(:delimited) %></td>
    <tr>
  </tbody>
  </table>
  </div>
  <div class="text-right">
    <% unless @cart_items.count == 0 %>
      <p class="text-center"><%= link_to '情報入力に進む',new_order_path(total_payment: @total), class: "btn btn-sm btn-danger"%></p>
    <% end %>
  </div>
</div>
</div>
</div>