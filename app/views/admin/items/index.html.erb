<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <span style="background-color:#DDD">
      <strong>商品一覧</strong>
    </span>
    
    <%= link_to "+", new_admin_item_path, class: 'btn btn-outline-secondary rounded-circle p-0　box-shadow' %>
    
    <table>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      
      <% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          
          <td><%= item.price.to_s(:delimited) %></td>
          
          <td><%= item.genre.name %></td>
          
          <% if item.is_active == true %>
            <td><%= '販売中' %></td>
          <% else %>
            <td><%= '販売停止中' %></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
    
    </div>
  </div>
</div>