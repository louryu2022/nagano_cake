<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <span style="background-color:#DDD">
      <strong>商品新規登録</strong>
    </span>
    
    <%= form_with model: @item, url: admin_items_path do |f| %>
    
      <div class="form-group">
        <%= f.label :image, '商品名' %>
        <%= f.file_field :image, accept: "image/*", required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :name, '商品名' %>
        <%= f.text_field :name, placeholder: "商品名", required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :introduction, '商品説明' %>
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),prompt: "-- 選択してください --" %>
      </div>
      
      <div class="form-group">
        <%= f.label :price, '税抜価格' %>
        <%= f.number_field :price, min: 0, placeholder: "1000", required: true %>円
      </div>
      
      <div class="form-group">
        <span>販売ステータス</span>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中' %>
        
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中' %>
      </div>
      
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>

    </div>
  </div>
</div>