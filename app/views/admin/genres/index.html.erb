<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h1>ジャンル一覧・追加</h1>

      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <%= form_with model: @genre, url: admin_genres_path do |f| %>
              <td>
              <%= f.text_field :name, class: 'form-control' %>
              </td>

              <td>
                <%= f.submit '新規登録', class: "btn btn-success" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table class='table'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
           <% @genres.each do |genre| %>
             <tr>
               <td><%= genre.name %></td>
               <td></td>
             </tr>
           <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>