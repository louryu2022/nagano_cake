<div class="container">
  <div class="row">
      <div class='col-3'>
        <h2 style="background-color:#DDD"><%= @search.name %>一覧</h2>
      </div>
      <div class='container-fluid'>
        <div class = "row">
        <% @searchs.each do |search| %>
        <div class= col-3>
          <%= link_to item_path(@search.id) do %>
          <%= image_tag search.image, size: "200x200"  %>
        <% end %><br>
        <%= search.name %><br>
        ￥<%= search.price.to_s(:delimited) %>
        </div>
        <% end %>
        </div>
        <%= paginate @searchs %>
      </div>
    </div>
  </div>