<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h1>ジャンル編集</h1>

      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>

              <td>
              <%= f.text_field :name, class: 'form-control' %>
              </td>

              <td>
                <%= f.submit '変更を保存', class: "btn btn-success" %>
              </td>

          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>