<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <span style="background-color:#DDD">
      <strong>注文履歴一覧</strong>
    </span>
    
    <table>
      <thead bgcolor="#EEE">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      
      <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.set_date, admin_order_path(order.id) %></td>
        
        <td><%= order.customer.last_name %>
            <%= order.customer.first_name %></td>
        
        <% order.order_details.each do |order_detail|%>
          <% @order_total += order_detail.amount %>
        <% end %>
        <td><%= @order_total %></td>
        
        <td><%= order.status %></td>
        
      </tr>
      <% end %>
      </tbody>
    </table>
    
    </div>
  </div>
</div>