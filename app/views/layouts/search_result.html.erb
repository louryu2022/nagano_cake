<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "Item" %>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @genre.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>