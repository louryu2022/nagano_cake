<div class="container mb-5">
    <div class="row">
      <div class='col-md-2'>
        <a href="/"><%= image_tag "image.logo.png", size: "200x200" %></a>
      </div>
      <div class='col-md-5'>
      </div>
      <div class='col-md-5 pull-right d-flex align-items-center'>
    <% if customer_signed_in? %>
      <div class="text-right">
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'マイページ',customers_my_page_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '商品一覧',items_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'カート',cart_items_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'ログアウト',destroy_customer_session_path, method: :delete %></button>
      </div>
    <% elsif admin_signed_in? %>
      <div class="text-right">
        <button type="button" class="btn btn-outline-secondary"><%= link_to '商品一覧',admin_items_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '会員一覧',admin_customers_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '注文一覧',admin_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'ジャンル一覧',admin_genres_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'ログアウト',destroy_admin_session_path, method: :delete %></button>
      </div>
    <% else %>
      <div class="text-right">
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'About',about_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '商品一覧',items_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to '新規登録',new_customer_registration_path %></button>
        <button type="button" class="btn btn-outline-secondary"><%= link_to 'ログイン',new_customer_session_path %></button>
      </div>
    <% end %>
    
      <div class="search_form text-right mt-md-1">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([['Item'],['Genre']]) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partical_match"]]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
     </div> 
  </div>
 </div>
</div>
